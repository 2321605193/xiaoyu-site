<script>
  const navbar = document.getElementById('navbar');
  const menuBtn = document.getElementById('menu-btn');
  const mobileMenu = document.getElementById('mobile-menu');

  window.addEventListener('scroll', () => {
    navbar?.classList.toggle('bg-[#0a0a0f]/80', window.scrollY > 30);
    navbar?.classList.toggle('backdrop-blur-xl', window.scrollY > 30);
    navbar?.classList.toggle('border-b', window.scrollY > 30);
    navbar?.classList.toggle('border-white/[0.04]', window.scrollY > 30);
  });

  menuBtn?.addEventListener('click', () => mobileMenu?.classList.toggle('hidden'));
  mobileMenu?.querySelectorAll('a').forEach(l => l.addEventListener('click', () => mobileMenu?.classList.add('hidden')));
</script>
