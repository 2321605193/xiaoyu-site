      <!-- Desktop nav -->
      <div class="hidden md:flex items-center gap-8">
        {navItems.map(item => (
          <a href={item.href} class="text-sea-muted hover:text-sea-cyan transition-colors text-sm font-medium">
            {item.label}
          </a>
        ))}
      </div>

      <!-- Mobile menu button -->
      <button class="md:hidden text-sea-muted hover:text-sea-cyan" id="menu-btn" aria-label="èœå•">
        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
        </svg>
      </button>
