<script>
  // Hover border
  document.querySelectorAll<HTMLElement>('.thought-card[data-hover-border]').forEach(card => {
    const borderColor = card.dataset.hoverBorder!;
    card.addEventListener('mouseenter', () => {
      card.style.borderColor = borderColor;
      card.style.transform = 'translateX(4px)';
    });
    card.addEventListener('mouseleave', () => {
      card.style.borderColor = 'var(--border-subtle)';
      card.style.transform = 'none';
    });
  });

  // Like interaction
  document.querySelectorAll<HTMLElement>('.thought-action[data-action="like"]').forEach(btn => {
    let liked = false;
    let count = 0;
    btn.addEventListener('click', (e) => {
      e.stopPropagation();
      liked = !liked;
      count += liked ? 1 : -1;
      btn.classList.toggle('liked', liked);
      const icon = btn.querySelector('.like-icon')!;
      const countEl = btn.querySelector('.like-count')!;
      icon.textContent = liked ? 'â™¥' : 'â™¡';
      countEl.textContent = String(Math.max(0, count));
    });
  });
</script>
