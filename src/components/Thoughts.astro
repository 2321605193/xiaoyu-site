<script>
  // Hover
  document.querySelectorAll<HTMLElement>('.thought-card').forEach(card => {
    card.addEventListener('mouseenter', () => {
      card.style.borderColor = 'rgba(251,191,36,0.15)';
      card.style.transform = 'translateX(4px)';
      card.style.boxShadow = '0 4px 20px rgba(251,191,36,0.08)';
    });
    card.addEventListener('mouseleave', () => {
      card.style.borderColor = '';
      card.style.transform = '';
      card.style.boxShadow = '';
    });
  });

  // Like
  document.querySelectorAll<HTMLElement>('.like-btn').forEach(btn => {
    let liked = false, count = 0;
    const icon = btn.querySelector('.like-icon') as SVGElement;
    const countEl = btn.querySelector('.like-count')!;

    btn.addEventListener('click', (e) => {
      e.stopPropagation();
      liked = !liked;
      count += liked ? 1 : -1;

      if (liked) {
        icon.style.fill = '#ef4444';
        icon.style.stroke = '#ef4444';
        btn.style.color = '#ef4444';
      } else {
        icon.style.fill = 'none';
        icon.style.stroke = 'currentColor';
        btn.style.color = '';
      }

      countEl.textContent = String(Math.max(0, count));
    });
  });
</script>
