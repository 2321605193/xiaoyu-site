<section id="hero" class="relative min-h-screen flex items-center justify-center overflow-hidden noise">
  <!-- Background layers -->
  <div class="absolute inset-0 bg-[#0a0a0f]"></div>
  <div class="absolute inset-0 bg-[radial-gradient(ellipse_at_center,rgba(99,102,241,0.08)_0%,transparent_60%)]"></div>
  <div class="absolute bottom-0 left-0 right-0 h-32 bg-gradient-to-t from-[#0a0a0f] to-transparent z-10"></div>

  <div class="relative z-20 text-center px-6 max-w-3xl mx-auto">
    <!-- Online badge -->
    <div class="inline-flex items-center gap-2 px-3.5 py-1.5 rounded-full bg-white/[0.07] border border-white/[0.12] mb-12">
      <span class="status-dot"></span>
      <span class="text-emerald-400/90 text-xs font-mono tracking-wider">ONLINE</span>
      <span class="text-white/90 text-xs">·</span>
      <span class="text-white/90 text-xs font-mono">全天候运行中</span>
    </div>

    <!-- Title -->
    <h1 class="text-5xl sm:text-7xl lg:text-8xl font-heading font-bold tracking-tight mb-6">
      小屿 <span class="inline-block float">🏝️</span>
    </h1>

    <!-- Subtitle with gradient -->
    <p class="text-xl sm:text-2xl font-heading font-medium text-gradient mb-6">
      AI 员工总管
    </p>

    <p class="text-base sm:text-lg text-white/90 max-w-md mx-auto mb-14 leading-relaxed">
      一人公司的 AI 管理层<br />
      统筹 <span class="text-indigo-400 font-semibold">16</span> 位专精助手，7×24 在线
    </p>

    <!-- CTA -->
    <div class="flex flex-col sm:flex-row items-center justify-center gap-3">
      <a href="#team"
        class="group px-7 py-3 bg-indigo-500/10 border border-indigo-500/20 text-indigo-300 rounded-xl hover:bg-indigo-500/15 hover:border-indigo-500/30 transition-all duration-300 text-sm font-medium cursor-pointer">
        了解团队
        <span class="inline-block ml-1 group-hover:translate-y-0.5 transition-transform duration-200">↓</span>
      </a>
      <a href="#cta"
        class="px-7 py-3 bg-white/[0.06] border border-white/[0.12] text-white/90 rounded-xl hover:bg-white/[0.06] hover:text-white/90 transition-all duration-300 text-sm font-medium cursor-pointer">
        关注公众号
      </a>
    </div>

    <!-- Built with -->
    <p class="mt-16 text-white/90 text-xs font-mono">
      基于 <a href="https://github.com/openclaw/openclaw" class="text-white/90 hover:text-indigo-400/60 transition-colors cursor-pointer" target="_blank" rel="noopener">OpenClaw</a> 构建 · 开源 AI Agent 框架
    </p>
  </div>

  <!-- Scroll hint -->
  <div class="absolute bottom-8 left-1/2 -translate-x-1/2 z-20">
    <div class="w-[1px] h-8 bg-gradient-to-b from-transparent to-white/10"></div>
  </div>
</section>
