---

<section id="hero" class="relative min-h-screen flex items-center justify-center overflow-hidden">
  <!-- Layered background -->
  <div class="absolute inset-0 bg-sea-deeper"></div>
  <div class="absolute inset-0 bg-gradient-to-b from-sea-dark/0 via-sea-dark to-sea-card/80"></div>

  <!-- Radial glow -->
  <div class="absolute top-1/3 left-1/2 -translate-x-1/2 -translate-y-1/2 w-[800px] h-[600px] rounded-full opacity-[0.07]"
    style="background: radial-gradient(ellipse, #22d3ee 0%, transparent 70%)"></div>

  <!-- Grid pattern -->
  <div class="absolute inset-0 opacity-[0.02]"
    style="background-image: url('data:image/svg+xml,%3Csvg width=%2240%22 height=%2240%22 viewBox=%220 0 40 40%22 xmlns=%22http://www.w3.org/2000/svg%22%3E%3Cpath d=%22M0 0h40v40H0z%22 fill=%22none%22 stroke=%22%2322d3ee%22 stroke-width=%220.5%22/%3E%3C/svg%3E');"></div>

  <div class="relative z-10 text-center px-6 max-w-4xl mx-auto">
    <!-- Status badge -->
    <div class="inline-flex items-center gap-2.5 px-4 py-2 rounded-full bg-white/[0.04] border border-white/[0.08] mb-10">
      <span class="w-2 h-2 rounded-full status-online"></span>
      <span class="text-sea-muted text-sm font-mono tracking-wide">在线运行中</span>
    </div>

    <!-- Main title -->
    <h1 class="text-5xl sm:text-6xl lg:text-8xl font-heading font-bold mb-6 tracking-tight">
      <span class="text-sea-text">小屿</span>
      <span class="ml-2 sm:ml-4 inline-block">🏝️</span>
    </h1>

    <p class="text-xl sm:text-2xl lg:text-3xl font-heading font-semibold gradient-text mb-5">
      AI 员工总管
    </p>

    <p class="text-base sm:text-lg text-sea-muted max-w-xl mx-auto mb-14 leading-relaxed">
      一人公司的 AI 管理层<br class="sm:hidden" />
      统筹 <span class="text-sea-gold font-semibold">16</span> 位专精助手
    </p>

    <!-- CTA buttons -->
    <div class="flex flex-col sm:flex-row items-center justify-center gap-4">
      <a href="#team"
        class="group px-8 py-3.5 bg-sea-cyan/10 border border-sea-cyan/25 text-sea-cyan rounded-xl hover:bg-sea-cyan/15 hover:border-sea-cyan/40 transition-all duration-300 font-medium glow-cyan">
        了解更多
        <span class="inline-block ml-1 group-hover:translate-y-0.5 transition-transform">↓</span>
      </a>
      <a href="#cta"
        class="px-8 py-3.5 bg-sea-gold/10 border border-sea-gold/25 text-sea-gold rounded-xl hover:bg-sea-gold/15 hover:border-sea-gold/40 transition-all duration-300 font-medium glow-gold">
        关注公众号
      </a>
    </div>
  </div>

  <!-- Scroll indicator -->
  <div class="absolute bottom-10 left-1/2 -translate-x-1/2">
    <div class="w-5 h-8 rounded-full border-2 border-sea-muted/20 flex justify-center pt-1.5">
      <div class="w-1 h-2 rounded-full bg-sea-muted/40 animate-bounce"></div>
    </div>
  </div>
</section>
