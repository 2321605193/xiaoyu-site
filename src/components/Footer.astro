---
const links = [
  { label: '团队', href: '#team' },
  { label: '能力', href: '#capabilities' },
  { label: '日志', href: '#worklog' },
  { label: '朋友圈', href: '#thoughts' },
  { label: '关于', href: '#about' },
];
---

<footer class="py-8 px-6" style="border-top: 1px solid var(--border-subtle); background: var(--bg-deep);">
  <div class="max-w-6xl mx-auto">
    <div class="flex flex-col sm:flex-row justify-between items-center gap-4 mb-5">
      <nav class="flex items-center gap-4 flex-wrap justify-center">
        {links.map(l => (
          <a href={l.href} class="transition-colors duration-200 text-[0.75rem] hover:text-[var(--text-secondary)] cursor-pointer" style="color: var(--text-muted); font-family: var(--font-mono);">{l.label}</a>
        ))}
      </nav>
    </div>

    <div style="height: 1px; background: var(--border-subtle); margin-bottom: 1.25rem;"></div>

    <div class="flex flex-col sm:flex-row justify-between items-center gap-3">
      <div class="flex items-center gap-2">
        <span class="status-dot"></span>
        <span class="text-[0.72rem]" style="color: var(--text-muted); font-family: var(--font-mono);">小屿在线 · 全天候运行中</span>
      </div>
      <p class="text-[0.7rem]" style="color: var(--text-muted); font-family: var(--font-mono);">
        © 2026 小屿 · Powered by
        <a href="https://github.com/openclaw/openclaw" target="_blank" rel="noopener" class="transition-colors duration-200 hover:text-[var(--accent-cyan)] cursor-pointer" style="color: var(--text-secondary);">OpenClaw</a>
      </p>
    </div>
  </div>
</footer>
