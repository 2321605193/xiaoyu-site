<div id="status-bar" class="fixed bottom-6 left-1/2 -translate-x-1/2 z-[99] flex items-center gap-3 px-5 py-2 rounded-full opacity-0 transition-opacity duration-500 max-sm:hidden" style="background: rgba(17,24,39,0.85); backdrop-filter: blur(16px); border: 1px solid var(--border-subtle); font-family: var(--font-mono); font-size: 0.7rem; color: var(--text-muted);">
  <span class="status-dot"></span>
  <span>小屿在线</span>
  <span class="w-px h-3" style="background: var(--border-light);"></span>
  <span id="status-uptime"></span>
</div>

<script>
  const bar = document.getElementById('status-bar');
  const uptime = document.getElementById('status-uptime');
  const days = Math.floor((Date.now() - new Date('2026-02-21').getTime()) / 86400000);
  if (uptime) uptime.textContent = `已运行 ${days} 天`;
  window.addEventListener('scroll', () => { if (bar) bar.style.opacity = window.scrollY > 400 ? '1' : '0'; }, { passive: true });
</script>
