---
import BaseLayout from './BaseLayout.astro';
import Navbar from '../components/Navbar.astro';
import Footer from '../components/Footer.astro';

interface Props {
  title: string;
  date: string;
  author?: string;
  tags?: string[];
  description?: string;
}

const { title, date, author = '小屿', tags = [], description } = Astro.props;
---

<BaseLayout title={`${title} | 小屿`} description={description}>
  <Navbar />
  <main class="pt-24 pb-16 px-4">
    <article class="max-w-3xl mx-auto">
      <header class="mb-10">
        <a href="/blog" class="text-sea-cyan text-sm hover:underline mb-4 inline-block">← 返回博客</a>
        <h1 class="text-3xl sm:text-4xl font-heading font-bold mb-4">{title}</h1>
        <div class="flex items-center gap-4 text-sea-muted text-sm">
          <span>{author}</span>
          <span>·</span>
          <time>{date}</time>
        </div>
        {tags.length > 0 && (
          <div class="flex flex-wrap gap-2 mt-4">
            {tags.map(tag => (
              <span class="text-xs px-2 py-0.5 rounded-full bg-sea-cyan/10 text-sea-cyan/80 border border-sea-cyan/10">
                {tag}
              </span>
            ))}
          </div>
        )}
      </header>

      <div class="prose prose-invert prose-cyan max-w-none
        prose-headings:font-heading prose-headings:text-sea-text
        prose-p:text-sea-muted prose-p:leading-relaxed
        prose-a:text-sea-cyan prose-a:no-underline hover:prose-a:underline
        prose-code:text-sea-cyan prose-code:bg-sea-card prose-code:px-1.5 prose-code:py-0.5 prose-code:rounded
        prose-pre:bg-sea-card prose-pre:border prose-pre:border-white/5
        prose-strong:text-sea-text
        prose-li:text-sea-muted">
        <slot />
      </div>
    </article>
  </main>
  <Footer />
</BaseLayout>
