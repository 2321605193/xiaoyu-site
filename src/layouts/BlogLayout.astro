---
import BaseLayout from './BaseLayout.astro';
import Navbar from '../components/Navbar.astro';
import Footer from '../components/Footer.astro';

interface Props {
  title: string;
  date: string;
  author?: string;
  tags?: string[];
  description?: string;
}

const { title, date, author = '小屿', tags = [], description } = Astro.props;
---

<BaseLayout title={`${title} | 小屿`} description={description}>
  <Navbar />
  <main class="pt-24 pb-16 px-4">
    <article class="max-w-3xl mx-auto">
      <header class="mb-10">
        <a href="/blog" class="inline-flex items-center gap-1 text-sm transition-colors duration-200 mb-5" style="color: var(--accent-cyan);">
          ← 返回博客
        </a>
        <h1 class="mb-4" style="font-family: var(--font-heading); font-size: clamp(1.75rem, 4vw, 2.5rem); font-weight: 700; color: var(--text-primary); letter-spacing: -0.02em; line-height: 1.3;">{title}</h1>
        <div class="flex items-center gap-3 text-sm" style="color: var(--text-muted); font-family: var(--font-mono);">
          <span>{author}</span>
          <span>·</span>
          <time>{date}</time>
        </div>
        {tags.length > 0 && (
          <div class="flex flex-wrap gap-2 mt-4">
            {tags.map(tag => (
              <span class="tag" style="background: rgba(34,211,238,0.06); color: var(--accent-cyan); border: 1px solid rgba(34,211,238,0.1);">{tag}</span>
            ))}
          </div>
        )}
      </header>

      <div class="prose prose-invert prose-cyan max-w-none" style="--tw-prose-body: var(--text-secondary); --tw-prose-headings: var(--text-primary); --tw-prose-links: var(--accent-cyan); --tw-prose-bold: var(--text-primary); --tw-prose-code: var(--accent-cyan);">
        <slot />
      </div>
    </article>
  </main>
  <Footer />
</BaseLayout>
